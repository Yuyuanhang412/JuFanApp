<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jufanapp.mainpager.SousuoActivity">

    <LinearLayout
        android:id="@+id/lin_sousuo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_sousuo_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/li_home_search_left_bg"
            />
        <EditText
            android:id="@+id/et_sousuo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="昵称 房间ID"
            android:textColor="@color/gainsboro"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gainsboro"
        android:layout_below="@+id/lin_sousuo"
        />


</RelativeLayout>
