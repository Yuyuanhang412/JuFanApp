<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

   <LinearLayout
       android:id="@+id/lin_guanzhu_01"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <View
           android:layout_width="5dp"
           android:layout_height="10dp"
           android:background="@color/red"
            android:layout_marginLeft="3dp"
           android:layout_marginTop="3dp"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="关注好友的直播"
           android:layout_marginLeft="5dp"
           />

   </LinearLayout>

    <ImageView
        android:id="@+id/image_guanzhu_01"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/li_bg_attention_list_empty"
        android:layout_below="@+id/lin_guanzhu_01"
        />

    <LinearLayout
        android:id="@+id/lin_guanzhu_02"
        android:orientation="horizontal"
        android:layout_below="@+id/image_guanzhu_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:background="@color/red"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您可能感兴趣"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:text="推荐关注"
            android:textColor="@color/red"
            android:drawableRight="@drawable/li_icon_arrow_right"
            />

    </LinearLayout>

    <GridView
        android:id="@+id/gv_guanzhu_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:layout_below="@+id/lin_guanzhu_02"
        ></GridView>

</RelativeLayout>
