<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/videopathget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jufanapp.mainpager.RemenVideoActivity">


    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/member_send_good"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        />

    <!-- 飘心的路径 -->
    <com.example.jufanapp.dianzan.HeartLayout
        android:id="@+id/heart_layout"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        >
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/room_bg_user"
            android:layout_marginTop="10dp"
            >

            <ImageView
                android:id="@+id/image_video_helder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/ic_launcher"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_video_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名字"
                    android:layout_marginTop="7dp"
                    />
                <TextView
                    android:id="@+id/tv_video_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="在线"
                    android:layout_marginTop="5dp"
                    />
            </LinearLayout>


            <ImageView
                android:id="@+id/image_video_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/li_btn_room_follow_n"
                android:layout_gravity="center"
                android:layout_marginLeft="70dp"
                android:visibility="visible"
                />

        </LinearLayout>

    </RelativeLayout>







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_video_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_icon_message"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            />
        <ImageView
        android:id="@+id/image_video_private"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_icon_private_chat"
        android:layout_gravity="center"
        android:layout_marginLeft="90dp"
        />
        <ImageView
            android:id="@+id/image_video_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_icon_share"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/image_video_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_icon_gift"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />
        <ImageView
            android:id="@+id/image_video_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_icon_close"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
