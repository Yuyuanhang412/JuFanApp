<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jufanapp.mainpager.NameTypeActivity">

    <LinearLayout
        android:id="@+id/lin_type01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_type_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/li_btn_back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑资料"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            />
    </LinearLayout>

    <View
        android:id="@+id/type_view01"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro"
        android:layout_below="@+id/lin_type01"
        />

    <LinearLayout
        android:id="@+id/lin_type02"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/lin_type01"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/li_default_head"
            android:layout_gravity="center"
            android:layout_marginLeft="280dp"
            />
    </LinearLayout>

    <View
        android:id="@+id/type_view02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro"
        android:layout_below="@+id/lin_type02"
        />

    <View
        android:id="@+id/type_view03"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/lin_type02"
        />

    <LinearLayout
        android:id="@+id/lin_type03"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/type_view03"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="范爷"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="260dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/li_icon_arrow_right"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <View
        android:id="@+id/type_view04"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro"
        android:layout_below="@+id/lin_type03"
        />

    <LinearLayout
        android:id="@+id/lin_type04"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/type_view04"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="280dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/li_icon_arrow_right"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <View
        android:id="@+id/type_view05"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro"
        android:layout_below="@+id/lin_type04"
        />
    <LinearLayout
        android:id="@+id/lin_type05"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/type_view05"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签名"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="这家伙很懒,什么都没有留下!"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/li_icon_arrow_right"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <View
        android:id="@+id/type_view06"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro"
        android:layout_below="@+id/lin_type05"
        />


</RelativeLayout>
